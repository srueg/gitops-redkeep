{
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": ["(^|/)*\\.yaml$"],
    "digest": {
      "enabled": true
    }
  },
  "packageRules": [
    {
      "paths": [
        "utils/**"
      ],
      "automerge": true,
      "requiredStatusChecks": null
    },
    {
      "datasources": ["docker"],
      "versioning": "loose"
    }
  ]
}
