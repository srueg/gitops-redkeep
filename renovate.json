{
  "extends": [
    "config:base"
  ],
  "ignorePresets": [
    ":prHourlyLimit2"
  ],
  "schedule": [
    "after 10am",
    "before 5pm"
  ],
  "kubernetes": {
    "fileMatch": [
      "(^|/)*\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "digest"],
      "automerge": true,
      "pinDigests": true,
      "labels": ["auto merge"]
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["update major"]
    },
    {
      "datasources": [
        "docker"
      ],
      "packagePatterns": [
        "^docker.io/linuxserver"
      ],
      "packageNames": [
        "docker.io/plexinc/pms-docker"
      ],
      "versioning": "loose"
    }
  ]
}