{
  "extends": [
    "config:base"
  ],
  "kubernetes": {
    "fileMatch": [
      "(^|/)*\\.yaml$"
    ],
    "digest": {
      "enabled": true
    }
  },
  "packageRules": [
    {
      "paths": [
        "utils/**"
      ],
      "automerge": true,
      "requiredStatusChecks": null
    },
    {
      "datasources": [
        "docker"
      ],
      "packagePatterns": [
        "^linuxserver"
      ],
      "packageNames": [
        "plexinc/pms-docker"
      ],
      "versioning": "loose"
    }
  ]
}
